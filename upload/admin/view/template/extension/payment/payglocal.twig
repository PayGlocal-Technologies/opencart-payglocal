{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payglocal" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payglocal" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_total }}">{{ entry_total }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_payglocal_total" value="{{ payment_payglocal_total }}" placeholder="{{ entry_total }}" id="input-total" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_title }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_payglocal_title" value="{{ payment_payglocal_title }}" placeholder="{{ entry_title }}"  class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-test">{{ entry_test }}</label>
            <div class="col-sm-10">
              <select name="payment_payglocal_test" id="input-status" class="form-control">
                {% if payment_payglocal_test %}
                <option value="1" selected="selected">{{ text_yes }}</option>
                <option value="0">{{ text_no }}</option>
                {% else %}
                <option value="1">{{ text_yes }}</option>
                <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group sandbox">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_sandbox_merchant_id }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_payglocal_sandbox_merchant_id" value="{{ payment_payglocal_sandbox_merchant_id }}" placeholder="{{ entry_sandbox_merchant_id }}"  class="form-control" />
            </div>
          </div>
          <div class="form-group sandbox">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_sandbox_public_kid }}</label>
            <div class="col-sm-10">
              <input type="password" name="payment_payglocal_sandbox_public_kid" value="{{ payment_payglocal_sandbox_public_kid }}" placeholder="{{ entry_sandbox_public_kid }}"  class="form-control" />
            </div>
          </div>
          <div class="form-group sandbox">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_sandbox_private_kid }}</label>
            <div class="col-sm-10">
              <input type="password" name="payment_payglocal_sandbox_private_kid" value="{{ payment_payglocal_sandbox_private_kid }}" placeholder="{{ entry_sandbox_private_kid }}"  class="form-control" />
            </div>
          </div>
          <div class="form-group sandbox">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_sandbox_public_pem }}</label>
            <div class="col-sm-10">
              <div class="input-group">
                <input type="text" name="payment_payglocal_sandbox_public_pem" value="{{ payment_payglocal_sandbox_public_pem }}" placeholder="{{ entry_sandbox_public_pem }}"  class="form-control" />
                <span class="input-group-btn">
                  <button type="button" id="payglocal_sandbox_public_pem" data-loading-text="Loading..." class="btn btn-primary"><i class="fa fa-upload"></i> {{ button_upload }}</button>
                </span>
              </div>
            </div>
          </div> 
          <div class="form-group sandbox">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_sandbox_private_pem }}</label>
            <div class="col-sm-10">
              <div class="input-group">
                <input type="text" name="payment_payglocal_sandbox_private_pem" value="{{ payment_payglocal_sandbox_private_pem }}" placeholder="{{ entry_sandbox_private_pem }}"  class="form-control" />
                <span class="input-group-btn">
                  <button type="button" id="payglocal_sandbox_private_pem" data-loading-text="Loading..." class="btn btn-primary"><i class="fa fa-upload"></i> {{ button_upload }}</button>
                </span>
              </div>
            </div>
          </div>    
          <div class="form-group sandbox">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_gateway_url }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_payglocal_sandbox_gateway_url" value="{{ payment_payglocal_sandbox_gateway_url }}" placeholder="{{ entry_gateway_url }}"  class="form-control" />
            </div>
          </div>
          <div class="form-group sandbox">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_refund_url }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_payglocal_sandbox_refund_url" value="{{ payment_payglocal_sandbox_refund_url }}" placeholder="{{ entry_refund_url }}"  class="form-control" />
            </div>
          </div>
          <div class="form-group live">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_live_merchant_id }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_payglocal_live_merchant_id" value="{{ payment_payglocal_live_merchant_id }}" placeholder="{{ entry_live_merchant_id }}"  class="form-control" accept=".pem"/>
            </div>
          </div>
          <div class="form-group live">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_live_public_kid }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_payglocal_live_public_kid" value="{{ payment_payglocal_live_public_kid }}" placeholder="{{ entry_live_public_kid }}"  class="form-control" />
            </div>
          </div>
          <div class="form-group live">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_live_private_kid }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_payglocal_live_private_kid" value="{{ payment_payglocal_live_private_kid }}" placeholder="{{ entry_live_private_kid }}"  class="form-control" />
            </div>
          </div>
          <div class="form-group live">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_live_public_pem }}</label>
            <div class="col-sm-10">
              <div class="input-group">
                <input type="text" name="payment_payglocal_live_public_pem" value="{{ payment_payglocal_live_public_pem }}" placeholder="{{ entry_live_public_pem }}"  class="form-control" />
                <span class="input-group-btn">
                  <button type="button" id="payglocal_live_public_pem" data-loading-text="Loading..." class="btn btn-primary"><i class="fa fa-upload"></i> {{ button_upload }}</button>
                </span>
              </div>
            </div>
          </div>
          <div class="form-group live">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_live_private_pem }}</label>
            <div class="col-sm-10">
              <div class="input-group">
                <input type="text" name="payment_payglocal_live_private_pem" value="{{ payment_payglocal_live_private_pem }}" placeholder="{{ entry_live_private_pem }}"  class="form-control" />
                <span class="input-group-btn">
                  <button type="button" id="payglocal_live_public_pem" data-loading-text="Loading..." class="btn btn-primary"><i class="fa fa-upload"></i> {{ button_upload }}</button>
                </span>
              </div>
            </div>
          </div>
          <div class="form-group live">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_gateway_url }}</label>
            <div class="col-sm-10">
              {% if payment_payglocal_live_gateway_url %}
                <input type="text" name="payment_payglocal_live_gateway_url" value="{{ entry_gateway_url }}" placeholder="{{ payment_payglocal_live_gateway_url }}"  class="form-control" readonly="readonly" />
              {% else %}
                <input type="text" name="payment_payglocal_live_gateway_url" value="{{ entry_gateway_url }}" placeholder="{{ payment_payglocal_live_gateway_url }}"  class="form-control"/>
              {% endif %}
            </div>
          </div>
          <div class="form-group live">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_refund_url }}</label>
            <div class="col-sm-10">
              {% if payment_payglocal_live_refund_url %}
                <input type="text" name="payment_payglocal_live_refund_url" value="{{ entry_refund_url }}" placeholder="{{ payment_payglocal_live_refund_url }}"  class="form-control" readonly="readonly" />
              {% else %}
                <input type="text" name="payment_payglocal_live_refund_url" value="{{ entry_refund_url }}" placeholder="{{ payment_payglocal_live_refund_url }}"  class="form-control" />
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-test">{{ entry_refund_required }}</label>
            <div class="col-sm-10">
              <select name="payment_payglocal_refund" id="input-status" class="form-control">
                {% if payment_payglocal_refund %}
                <option value="1" selected="selected">{{ text_yes }}</option>
                <option value="0">{{ text_no }}</option>
                {% else %}
                <option value="1">{{ text_yes }}</option>
                <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-test">{{ entry_order_status }}</label>
            <div class="col-sm-10">
              <select name="payment_payglocal_order_status_id" id="input-order-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_payglocal_order_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
            <div class="col-sm-10">
              <select name="payment_payglocal_geo_zone_id" id="input-geo-zone" class="form-control">
                <option value="0">{{ text_all_zones }}</option>
                {% for geo_zone in geo_zones %}
                {% if geo_zone.geo_zone_id == payment_payglocal_geo_zone_id %}
                <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                {% else %}
                <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_payglocal_status" id="input-status" class="form-control">
                {% if payment_payglocal_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_payglocal_sort_order" value="{{ payment_payglocal_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>   
        </form>
    </div>
  </div>
</div>
